# Database URL for sqlx CLI
DATABASE_URL=postgresql://buildscale:PASSWORD@localhost:5432/buildscale

# Database Configuration for application
BUILDSCALE_DATABASE_USER=buildscale
BUILDSCALE_DATABASE_PASSWORD=PASSWORD
BUILDSCALE_DATABASE_HOST=localhost
BUILDSCALE_DATABASE_PORT=5432
BUILDSCALE_DATABASE_DATABASE=buildscale

# Session Configuration
# Session expiration time in hours (default: 720 = 30 days)
# Also used as maximum extension time for refresh_session()
BUILDSCALE_SESSIONS_EXPIRATION_HOURS=720

# JWT Configuration
# Secret key for signing JWT access tokens (minimum 32 characters recommended)
BUILDSCALE_JWT_SECRET=your-secret-key-here-min-32-chars
# Access token expiration time in minutes (default: 15 minutes)
BUILDSCALE_JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=15
